
@{
    ViewBag.Title = "收貨單查詢";
}

<style>
    .tdstyle {
        font-family: 標楷體;
        font-size: large;
        vertical-align: middle;
        border-style: solid;
        border-width: 0.5px;
        font-weight: 800;
        text-align: center;
        width: 15%;
        background-color: #D0CECF;
    }

    .ui-dialog {
        z-index: 1000 !important;
    }

    body {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    }
</style>
<div class="row">
    <section class="content-header">
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> 收貨作業</a></li>
            <li class="active">收貨單查詢</li>
        </ol>
    </section>
</div>

<form name="RecvForm">
    <div class="table-responsive">
        <table class="table" style="border-style:solid;border-width:2px">
            <tbody>
                <tr>
                    <td class="tdstyle">
                        收貨單號
                    </td>
                    <td> <input name="OrderNo" style="width:70%;border-color: #d2d6de;border: 1px solid #ccc;" id="OrderNo"></td>
                    <td class="tdstyle">
                        收貨日期起
                    </td>
                    <td>
                        <input type="text" name="ReceiveDateStart" id="ReceiveDateStart" class="dateTime">~<input type="text" name="ReceiveDateDateEnd" id="ReceiveDateEnd" class="dateTime">
                        <button id="btnSearch" class="btn btn-default" type="button" style="margin-left:10px"><i class="fa fa-search fa-fw"></i> 查詢</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</form>

<table id="RecvTable" data-url="@Url.Content("../api/Recv/RecvSearch")" class="hover display">
    <thead>
        <tr>
            <th>收貨單號</th>
            <th>採購案號</th>
            <th>交貨批次</th>
            <th>交貨日期</th>
            <th>收貨人員</th>
            <th>狀態</th>
            <th>動作</th>
        </tr>
    </thead>
</table>

<div id="RecvDetailDialog" data-url="@Url.Action("RecvDetail","Recv")"></div>
<div id="RecvDataDialog" data-url="@Url.Action("RecvData","Recv")" data-saveurl="@Url.Content("../api/Recv/saveRecvHeader")"></div>
<div id="FillRecvDataDialog" data-url="@Url.Action("FillRecvData","Recv")"></div>
<div id="RecvCloseDialog" data-url="@Url.Action("RecvClose","Recv")" data-closeurl="@Url.Content("../api/Recv/RecvClose")"></div>
<div id="TransToInventoryDialog" data-url="@Url.Action("TransToInventory","Recv")" data-closeurl="@Url.Content("../api/Recv/TransToInventory")"></div>


@section scripts{

    <script src="~/PageJs/RecvSearch.js?ver=@DateTime.Now.ToString("yyyyMMddmmss")"></script>
}



