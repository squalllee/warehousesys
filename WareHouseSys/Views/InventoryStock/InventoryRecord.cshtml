@using WareHouseSys.ViewModels
@using WareHouseSys.Models
@model StockInventoryHeaderViewModel
@{
    ViewBag.Title = "盤點記錄";
    Layout = "";
}

<style>
    .table > tbody > tr > td {
        border-top: 1px solid #2b2b2b;
    }

    .box-1 {
        width: 100%;
        height: 100%;
        line-height: 100px;
        max-width: 100%;
        text-align: center;
    }

    .diff {
        color: red;
        font-weight: 800;
    }
</style>

<form>

    <table class="table" style="border-style:solid;border-width:2px">
        <tbody>
            <tr>
                <td  style="font-weight:800;font-size:x-large" align="center">盤點記錄表</td>
            </tr>
            <tr>
                <td >
                    <div style="width:950px">
                        <div id="InventoryRecordGrid" data-url="@Url.Content("../InventoryStock/Inventorydiff")?OrderNo=@ViewBag.OrderNo"></div>
                    </div>

                </td>
            </tr>
            <tr>
                <td>
                    <div class="pull-right">
                        <button id="BtnPrintInventoryRecord" onclick="PrintInventoryRecord('@ViewBag.OrderNo')" class="btn btn-default" type="button" style="margin-left:10px"><i class="far fa-save"></i> 列印</button>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</form>

