
@{
    ViewBag.Title = "物料發料作業";
}

<style>
    .tdstyle {
        font-family: 標楷體;
        font-size: large;
        vertical-align: middle;
        border-style: solid;
        border-width: 0.5px;
        font-weight: 800;
        text-align: center;
        width: 15%;
        background-color: #D0CECF;
    }

    .ui-dialog {
        z-index: 1000 !important;
    }

    body {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    }

    #MaterialPickingGrid .k-grid-content, .k-grid tr td {
        overflow: visible;
    }

    #MaterialPickingGrid .k-grid-header {
        padding-right: 0 !important;
    }
</style>
<div class="row">
    <section class="content-header">
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> 發料作業</a></li>
            <li class="active">物料發料</li>
        </ol>
    </section>
</div>

<button id="MaterialPickingAddBtn" class="btn btn-danger">新增領料單</button>
<div id="MaterialPickingGrid" data-url="@Url.Action("MaterialPickingSearch", "Picking")"></div>

<div id="AddPickingMaterialDialog" data-url="@Url.Action("AddPickingMaterial", "Picking")"></div>

<div id="PickingDetailDialog" data-url="@Url.Action("PickingDetail", "Picking")"></div>

<div id="TransferReturnDialog" data-url="@Url.Action("TransferReturn", "Picking")"></div>
@section scripts{

    <script src="~/PageJs/PickingSearch.js?ver=@DateTime.Now.ToString("yyyyMMddmmss")"></script>
    
    <script src="~/PageJs/PickingDetail.js?ver=@DateTime.Now.ToString("yyyyMMddmmss")"></script>
    <script src="~/PageJs/TransferReturn.js?ver=@DateTime.Now.ToString("yyyyMMddmmss")"></script>
    <script src="~/PageJs/TransferScrap.js?ver=@DateTime.Now.ToString("yyyyMMddmmss")"></script>
    <script src="~/PageJs/AddMaterialPicking.js?ver=@DateTime.Now.ToString("yyyyMMddmmss")"></script>
}

