@using WareHouseSys.ViewModels;
@model RequireAddViewModel

@{
    ViewBag.Title = "新增採購單";
    Layout = "";
}
<style>
    .table > tbody > tr > td {
        border-top: 1px solid #2b2b2b;
    }
</style>

<form id="PurchaseAddForm">
    <input type="hidden" name="RequirementNo" value="@ViewBag.requireNo" />
    <input type="hidden" name="ContractPriceWithoutVAT" />
    <input type="hidden" name="ContractPriceIncludeVAT" />

    <table class="table" style="border-style:solid;border-width:2px">
        <tbody>
            <tr>
                <td colspan="6" style="font-weight:800;font-size:x-large" align="center">採購單</td>
            </tr>
            <tr>
                <td class="tdstyle">
                    採購日期
                </td>
                <td> <input name="PurchaseDate"  value="@Model.purchaseHeader.PurchaseDate.ToString("yyyy/MM/dd")" readonly /></td>
                <td class="tdstyle">
                    契約編號
                </td>
                <td>
                        <input name="PurchaseNo"  value="@Model.purchaseHeader.PurchaseNo" readonly />
                </td>

                <td class="tdstyle">
                    採購方式
                </td>
                <td>
                    <input name="PurchaseMethod"  value="@Model.purchaseHeader.PurchaseMethod" readonly />
                </td>
            </tr>
            <tr>
                <td class="tdstyle">
                    購料類別
                </td>
                <td>
                    <input name="PurClass"  value="@Model.purchaseHeader.PurClass" readonly />
                </td>
                <td class="tdstyle">
                    採購案名
                </td>
                <td>
                    <input name="PurchaseName"  value="@Model.purchaseHeader.PurchaseName" readonly />
                </td>
                <td class="tdstyle">
                    採購單位
                </td>
                <td>
                    <input name="PurchaseUnit" value="@Model.purchaseHeader.PurchaseUnit" readonly />
                    <input type="hidden" name="PurchaseUnitId" value="@Model.purchaseHeader.PurchaseUnitId" readonly />
                </td>
            </tr>
            <tr>
                <td class="tdstyle">
                    採購承辦人
                </td>
                <td>
                    <input name="PurchaseMan" value="@Model.purchaseHeader.PurchaseMan" readonly />
                    <input type="hidden" name="PurchaseManId" value="@Model.purchaseHeader.PurchaseManId" readonly />
                </td>
                <td class="tdstyle">
                    廠商名稱
                </td>
                <td>
                    <input name="VendorName" value="@Model.purchaseHeader.VendorName" readonly />
                    
                </td>
                <td class="tdstyle">
                    廠商聯絡人
                </td>
                <td>
                    <input name="VendorContact" value="@Model.purchaseHeader.VendorContact" readonly />
                
                </td>

            </tr>
            <tr>
                <td class="tdstyle">
                    電話
                </td>
                <td>
                    <input name="Tel" value="@Model.purchaseHeader.Tel" readonly />
                  
                </td>
                <td class="tdstyle">
                    手機
                </td>
                <td>
                    <input name="Mobile" value="@Model.purchaseHeader.Mobile" readonly />
                   
                </td>
                <td class="tdstyle">開口契約</td>
                <td>
                    <input name="OpenContract" value="@(Model.purchaseHeader.OpenContract ? "是" : "否")" readonly />

                </td>
            </tr>
            <tr>
                <td class="tdstyle">
                    預算來源
                </td>
                <td colspan="5">
                    <input name="BudgetSourceString" value="@Model.purchaseHeader.BudgetSource" readonly />
                    
                </td>
            </tr>
            <tr>
                <td colspan="6">
                    <div id="grid" style="width:960px" data-url="@Url.Action("getTransToPurInfo", "Requirement", new { requireNo = Model.purchaseHeader.RequirementNo })"></div>
                    <div id="ContractPriceWithoutVATDisplay" style="display:inline-block;padding-right:100px;font-weight:800" class="pull-left">總契約金額(未稅):</div><div id="ContractPriceIncludeVATDisplay" style="display:inline-block;padding-right:100px;font-weight:800" class="pull-right">總契約金額(含稅):</div>
                </td>
            </tr>
            <tr>
                <td colspan="6">
                    <div class="pull-right">
                        <button id="BtnSavePur" class="btn btn-default" type="button" style="margin-left:10px"><i class="far fa-save"></i> 儲存</button>
                    </div>
                    
                </td>
            </tr>
        </tbody>
    </table>
</form>

