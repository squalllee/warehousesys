
@{
    ViewBag.Title = "入庫單查詢";
}

<style>
    .tdstyle {
        font-family: 標楷體;
        font-size: large;
        vertical-align: middle;
        border-style: solid;
        border-width: 0.5px;
        font-weight: 800;
        text-align: center;
        width: 15%;
        background-color: #D0CECF;
    }

    .ui-dialog {
        z-index: 1000 !important;
    }

    body {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    }

    #InboundGrid .k-grid-content, .k-grid tr td {
        overflow: visible;
    }

    #InboundGrid .k-grid-header {
        padding-right: 0 !important;
    }
</style>
<div class="row">
    <section class="content-header">
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> 入庫作業</a></li>
            <li class="active">入庫單查詢</li>
        </ol>
    </section>
</div>

<button id="InboundAddBtn" class="btn btn-danger">新增入庫單</button>

<div id="InboundGrid" data-url="@Url.Action("InboundSearch", "Inbound")"></div>

<div id="InboundDetailDialog" data-url="@Url.Action("InboundDetail","Inbound")"></div>

<div id="FillInboundDataDialog" data-url="@Url.Action("FillInboundData","Inbound")" data-saveurl="@Url.Content("../api/Inbound/updateInboundheader")"></div>

<div id="InboundCloseDialog" data-url="@Url.Action("InboundClose","Inbound")" data-saveurl="@Url.Content("../api/Inbound/InboundClose")"></div>


@section scripts{

    <script src="~/PageJs/InboundSearch.js?ver=@DateTime.Now.ToString("yyyyMMddmmss")"></script>
    <script src="~/PageJs/InboundDetail.js?ver=@DateTime.Now.ToString("yyyyMMddmmss")"></script>
    <script src="~/PageJs/FillInboundData.js?ver=@DateTime.Now.ToString("yyyyMMddmmss")"></script>
    <script src="~/PageJs/InboundClose.js?ver=@DateTime.Now.ToString("yyyyMMddmmss")"></script>
    <script src="~/PageJs/InboundAdd.js?ver=@DateTime.Now.ToString("yyyyMMddmmss")"></script>
}

