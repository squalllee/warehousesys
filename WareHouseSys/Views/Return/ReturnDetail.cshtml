@using WareHouseSys.ViewModels
@using WareHouseSys.Models
@model ReturnHeaderViewModel

@{
    ViewBag.Title = "退料明細";
    Layout = "";
}

<style>
    .table > tbody > tr > td {
        border-top: 1px solid #2b2b2b;
    }
</style>
<form>
    <table class="table" style="border-style:solid;border-width:2px">
        <tbody>
            <tr>
                <td colspan="4" style="font-weight:800;font-size:x-large" align="center">退料單資訊</td>
            </tr>
            <tr>
                <td class="tdstyle">
                    退料單號
                </td>
                <td>
                    <h4><span class="label label-default">@Model.OrderNo</span></h4>
                </td>
                <td class="tdstyle">
                    領料單號
                </td>
                <td>
                    <h4><span class="label label-default">@Model.PickingNo</span></h4>
                </td>
            </tr>
            <tr>
                <td class="tdstyle">
                    入庫日期
                </td>
                <td>
                    <h4><span class="label label-default">@Model.InBoundDate</span></h4>
                </td>
                <td class="tdstyle">
                    入庫人員
                </td>
                <td>
                    <h4><span class="label label-default">@Model.InBoundMan</span></h4>
                </td>
            </tr>
            <tr>
                <td class="tdstyle">
                    申請日期
                </td>
                <td>
                    <h4><span class="label label-default">@(DateTime.Parse(Model.AddDateTime.ToString()).ToString("yyyy/MM/dd"))</span></h4>
                </td>
                <td class="tdstyle">
                    申請人員
                </td>
                <td>
                    <h4><span class="label label-default">@Model.ReturnMan</span></h4>
                </td>
            </tr>
            <tr>
                <td colspan="4">
                    <div style="width:1165px">
                        <div id="ReturnDetailGrid" data-url="@Url.Content("../Return/getReturnBodyViewBody")?OrderNO=@Model.OrderNo" ></div>
                    </div>
                </td>
            </tr>
            <tr>
                <td class="tdstyle">
                    附件
                </td>
                <td colspan="3">
                    @foreach (Attachment f in Model.attachments)
                    {
                        <span class="badge badge-pill badge-default" style="cursor:pointer"><a href="@Url.Action("getAttatchment","Return",new { OrderNo=Model.OrderNo,FileName=f.FileName})" style="color:white" target="aa">@f.FileName</a></span>
                    }
                </td>
            </tr>

        </tbody>
    </table>
</form>
